<?xml version="1.0" encoding="UTF-8"?>
<test-data
        xmlns="http://pmd.sourceforge.net/rule-tests"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://pmd.sourceforge.net/rule-tests https://pmd.sourceforge.net/rule-tests_1_0_0.xsd">

    <test-code>
        <description>If Connected App has unsafe callback, then report violation</description>
        <expected-problems>1</expected-problems>
        <expected-linenumbers>6</expected-linenumbers>
        <code><![CDATA[
<?xml version="1.0" encoding="UTF-8"?>
<ConnectedApp xmlns="http://soap.sforce.com/2006/04/metadata">
    <!-- ... -->
    <oauthConfig>
        <!-- ... -->
	    <callbackUrl>http://example.com/redirect</callbackUrl>
    </oauthConfig>
</ConnectedApp>
        ]]></code>
    </test-code>

    <test-code>
        <description>If Connected App has even just one unsafe callback url, then report violation</description>
        <expected-problems>1</expected-problems>
        <expected-linenumbers>6</expected-linenumbers>
        <code><![CDATA[
<?xml version="1.0" encoding="UTF-8"?>
<ConnectedApp xmlns="http://soap.sforce.com/2006/04/metadata">
    <!-- ... -->
    <oauthConfig>
        <!-- ... -->
	    <callbackUrl>
	        https://test.example.com/redirect
            http://test.example.com:8080/redirect
            https://api.example.com:8080/redirect
        </callbackUrl>
    </oauthConfig>
</ConnectedApp>
        ]]></code>
    </test-code>

    <test-code>
        <description>Connected App with unsafe callback url False positive</description>
        <expected-problems>0</expected-problems>
        <code><![CDATA[
<?xml version="1.0" encoding="UTF-8"?>
<ConnectedApp xmlns="http://soap.sforce.com/2006/04/metadata">
    <!-- ... -->
    <oauthConfig>
        <!-- ... -->
        <callbackUrl>https://login.salesforce.com/services/oauth2/callback</callbackUrl>
    </oauthConfig>
</ConnectedApp>
        ]]></code>
    </test-code>

</test-data>